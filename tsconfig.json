{
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@entities/*": [
        "./src/domains/entities/*"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "@domains/*": [
        "./src/domains/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@app/*": [
        "./src/express-app/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tools"
  ]
}